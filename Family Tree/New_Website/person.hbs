                    {{/eq}}
                    {{#eq literate ""}}
                        {{else}}
                            <h3>Literate:</h3>
                            <p>{{literate}} <br></p>
                    {{/eq}}
                    {{#eq SSN ""}}
                        {{else}}
                            <h3>SSN:</h3>
                            <p>{{SSN}} <br></p>
                    {{/eq}}
                    {{#eq politicalAffiliation ""}}
                        {{else}}
                            <h3>Political Affiliation:</h3>
                            <p>{{politicalAffiliation}} <br></p>
                    {{/eq}}
