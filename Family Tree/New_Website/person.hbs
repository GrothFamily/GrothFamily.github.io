                        {{else}}
                            <h3>Other Information:</h3>
                            {{#each otherInformation}}
                                <h5><li>{{this}}</li></h5>
                            {{/each}}
                    {{/eq}}
                    {{#eq shipInformation ""}}
                        {{else}}
                            <h3> Ship Information:</h3>
                            <p>{{shipInformation}} <br></p>
                    {{/eq}}
                    {{#eq whereWasInfoFound ""}}
                        {{else}}
                            <h3>Where was the information found?:</h3>
                            {{#each whereWasInfoFound}}
                                <h5><li>{{this}}</li></h5>
                            {{/each}}
                    {{/eq}}
