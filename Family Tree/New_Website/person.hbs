        <div class = "container">
            <div class = "jumbotron">
                <center>
                    
                    <img src = {{profilePhoto}} style = "width:200px" >
                    
                    <h1> {{firstName}}
                    {{#eq nickName ""}}
						{{else}}
							{{nickName}}
					{{/eq}}
                         {{middleName}}
					{{#eq maidenName ""}}
						{{else}}
							{{maidenName}}
					{{/eq}}
					{{lastName}} </h1>
                </center>
            </div>
            <div class = "headline" id = "information">
                {{#eq home ""}}
                    {{else}}
                    <h3>Home:</h3>
                    <button type = "button" class = "btn btn-info btn-md" data-toggle="modal" data-target = "#myModal"> {{home}} </button>
                    <div class="modal fade" id="myModal" role="dialog">
                        <div class="modal-dialog">
                            <div class="modal-body">
                                <center>
                                    {{#eq homeLink ""}}
                                        <h1 class = "text-white">Sorry there is no link</h1>
                                        {{else}}
                                        <iframe src= {{homeLink}} width="600" height="500" frameborder="0" style="border:0" allowfullscreen></iframe>
                                    {{/eq}}
                                </center>
                            </div>
                        </div>
                    </div>
                {{/eq}}
                <div class = "headline">
                    {{#eq birthday ""}}
                        {{else}}
                            <h3>Birthday:</h3> 
                            <p>{{birthday}} <br></p>
                    {{/eq}}
                    {{#eq sex ""}}
                        {{else}}
                            <h3>Sex:</h3>
                            <p>{{sex}} <br></p>
                    {{/eq}}
                    {{#eq age ""}}
                        {{else}}
                            <h3>Age:</h3>
                            <p>{{age}} <br></p>
                    {{/eq}}
                    {{#eq deathday ""}}
                        {{else}}
                            <h3>Death Date: </h3>
                            <p>{{deathday}} <br></p>
                    {{/eq}}
                    {{#eq interred ""}}
                        {{else}}
                            <h3>Interred Date: </h3>
                            <p>{{interred}} <br></p>
                    {{/eq}}
                    {{#eq deathPlace ""}}
                        {{else}}
                            <h3>Death Place:</h3>
                            <p>{{deathPlace}} <br></p>
                    {{/eq}}
                    {{#eq burialPlace ""}}
                        {{else}}
                            <h3>Burial Place:</h3>
                            <p>{{burialPlace}} <br></p>
                    {{/eq}}
                    {{#eq causeOfDeath ""}}
                        {{else}}
                            <h3>Cause of Death:</h3>
                            <p>{{causeOfDeath}} <br></p>
                    {{/eq}}
                    {{#eq birthPlace ""}}
                        {{else}}
                            <h3>Birth Place:</h3>
                            <p>{{birthPlace}} <br></p>
                    {{/eq}}
                    {{#eq parents ""}}
                        {{else}}
                            <h3>Parents:</h3>
                            {{#each parents}}
                                <h5><li><a href = "{{fileExist}}"> {{this}} </a></li></h5>
                            {{/each}}
                    {{/eq}}
                    {{#eq spouse ""}}
                        {{else}}
                            {{#if spouse}}
                            <h3>Spouse's Name:</h3>
                            <p><a href = "{{#spouseExist spouse}} {{/spouseExist}}"> {{spouse}} </a><br></p>
                            {{/if}}
                            {{#if spouse1}}
                                <h3> Spouse:</h3>
                                <p><a href = "{{#spouseExist spouse1}} {{/spouseExist}}"> {{spouse1}} </a><br></p>
                                {{#if marriageDate1}}
                                <h3>Marriage Date:</h3>
                                <p>{{marriageDate1}} <br></p>
                                {{/if}}
                            {{/if}}
                            {{#if spouse2}}
                                <h3> 2nd Spouse:</h3>
                                <p><a href = "{{#spouseExist spouse2}} {{/spouseExist}}"> {{spouse2}} </a><br></p>
                                {{#if marriageDate2}}
                                <h3>2nd Marriage Date:</h3>
                                <p>{{marriageDate2}} <br></p>
                                {{/if}}
                            {{/if}}
                            {{#if spouse3}}
                                <h3> 1st Spouse:</h3>
                                <p><a href = "{{#spouseExist spouse3}} {{/spouseExist}}"> {{spouse3}} </a><br></p>
                                {{#if marriageDate3}}
                                <h3>1st Marriage Date:</h3>
                                <p>{{marriageDate3}} <br></p>
                                {{/if}}
                            {{/if}}
                    {{/eq}}
                    {{#eq marriageDate ""}}
                        {{else}}
                            {{#if marriageDate}}
                            <h3> Marriage Date:</h3>
                            <p>{{marriageDate}} <br></p>
                            {{/if}}
                    {{/eq}}
                    {{#eq children ""}}
                        {{else}}
                            <h3>Children:</h3>
                            {{#each children}}
                                <h5> <li> <a href = "{{fileExist}}"> {{this}} </a> </li> </h5>
                            {{/each}}
                    {{/eq}}
                    {{#eq placesLived ""}}
                        {{else}}
                            <h3>Places Lived:</h3>
                            {{#each placesLived}}
                                <p><li>{{this}}</li></p>
                            {{/each}}
                    {{/eq}}
                    {{#eq immigrationYear ""}}
                        {{else}}
                            <h3>Immigration Year:</h3>
                            <p>{{immigrationYear}} <br></p>
                    {{/eq}}
                    {{#eq occupation ""}}
                        {{else}}
                            <h3>Occupation:</h3>
                            <p>{{occupation}} <br></p>
                    {{/eq}}
                    {{#eq collegeDegree ""}}
                        {{else}}
                            <h3>College Degree:</h3>
