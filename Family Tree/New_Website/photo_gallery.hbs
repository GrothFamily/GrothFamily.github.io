        </div>
        <div class = "container mt-5">
            <button onclick="topFunction()" id="myBtn" title="Go to top">Top</button>
                {{#each photo_album}}
                    {{#eq row "start"}}
                        <div class = "row mt-5">
                    {{/eq}}
                    <div class = "col-md-2 pointer" data-toggle = "modal" data-target = "#myModal{{@index}}">
                        <div class = "hover pointer img-thumbnail">
                            <img class = "img-fluid img-responsive" src= {{filePath}}>
                            <h6>{{peopleInPhoto}}</h6>
                        </div>
                    </div>
                    <div class="modal fade" id="myModal{{@index}}">
                        <div class="modal-dialog modal-lg">
                            <div class="modal-content">
                                <!-- Modal Header -->
                                <div class="modal-header">
                                    {{peopleInPhoto}}
                                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                                </div>
                        
                                <!-- Modal body -->
                                <div class="modal-body">
                                    <center>
                                        <img class = "img-fluid img-responsive" src= {{filePath}} style = "width: 70%">
                                    </center>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class = "col-md-1">
            
                    </div>

                    {{#eq row "end"}}   
                        </div>
                    {{/eq}}
                {{/each}}
            </div>
        </div>

        <script>
		// When the user scrolls down 20px from the top of the document, show the button
		window.onscroll = function() {scrollFunction()};

		function scrollFunction() {
		  if (document.body.scrollTop > 20 || document.documentElement.scrollTop > 20) {
			document.getElementById("myBtn").style.display = "block";
		  } else {
			document.getElementById("myBtn").style.display = "none";
		  }
		}

		// When the user clicks on the button, scroll to the top of the document
		function topFunction() {
		  document.body.scrollTop = 0;
		  document.documentElement.scrollTop = 0;
		}
	    </script>

